# prefork MPM
# StartServers: number of server processes to start
# MinSpareServers: minimum number of server processes which are kept spare
# MaxSpareServers: maximum number of server processes which are kept spare
# MaxRequestWorkers: maximum number of server processes allowed to start
# MaxConnectionsPerChild: maximum number of requests a server process serves

<IfModule mpm_prefork_module>
    StartServers          <%= @apache_config['StartServers'] ||= 2 %>
    MinSpareServers      <%= @apache_config['MinSpareServers'] ||= 5 %>
    MaxSpareServers      <%= @apache_config['MaxSpareServers'] ||= 12 %>
    MaxClients           <%= @apache_config['MaxClients'] ||= 30 %>
    MaxRequestWorkers   <%= @apache_config['MaxRequestWorkers'] ||= 150 %>
    MaxRequestsPerChild <%= @apache_config['MaxRequestsPerChild'] ||= 100 %>
    MaxConnectionsPerChild <%= @apache_config['MaxConnectionsPerChild'] ||= 100 %>
</IfModule>

